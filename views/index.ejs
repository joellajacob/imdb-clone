<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head.ejs") %>
<body class="bg-white min-h-screen">
    <%- include("./partials/navbar.ejs") %>
    <main>
        <div>
            <h2 class="section-title">Popular Movies</h2>
            <button class="filter-btn">Filters 
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 3c2.755 0 5.455.232 8.083.678.533.09.917.556.917 1.096v1.044a2.25 2.25 0 0 1-.659 1.591l-5.432 5.432a2.25 2.25 0 0 0-.659 1.591v2.927a2.25 2.25 0 0 1-1.244 2.013L9.75 21v-6.568a2.25 2.25 0 0 0-.659-1.591L3.659 7.409A2.25 2.25 0 0 1 3 5.818V4.774c0-.54.384-1.006.917-1.096A48.32 48.32 0 0 1 12 3Z" />
                </svg>
            </button>
        </div>
        <%- include("./partials/filterPanel.ejs") %>
        <div class="server-error-container hidden">
        </div>
        <div class="display-container">
            <div class="empty-result-container hidden">
                <h3></h3>
                <p class="specific-msg"></p>
            </div>
            <%- include("./partials/movieCard.ejs") %>
        </div> 
        <template id="dynamic-movie-template">
            <a href="" class="movie-card">
                <div>
                    <div>
                        <img src="/img/placeholder-media.svg" alt="Poster Unavalable">
                    </div>
                    <p class="movie-title"></p>
                    <p class="movie-date"></p>
                </div>
            </a>
        </template>
    </main>  
    <!-- axios cdn -->
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script> 
    <!-- caching data -->
    <script type="application/json" id="initial-popular-movie-data">
        <%- JSON.stringify({data: movies, baseImgURL: baseImgURL}) %>
    </script>
    <script type="module" src = "/js/genreFilter.js"></script>
    <script type="module" src="/js/search.js"></script>
</body>
</html>