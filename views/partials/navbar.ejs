<header class="bg-imdb-gray border-b border-gray-800 shadow-lg">
    <div class="max-w-7xl mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
            <!-- Logo Section -->
            <div class="flex-shrink-0">
                <a href="#" class="block">
                    <div class="bg-imdb-yellow text-black font-bold text-2xl px-4 py-2 rounded hover:bg-yellow-400 transition-colors">
                        IMDb
                    </div>
                </a>
            </div>
            <!-- Search Section -->
            <div class="flex-1 max-w-lg ml-8">
                <form class="search-form">
                    <label for="search" class="sr-only">Search for movies</label>
                    <div class="relative">
                        <input 
                            type="search" 
                            id="search" 
                            name="search" 
                            placeholder="Search any movie...." 
                            class="w-full bg-white text-gray-900 placeholder-gray-500 rounded-lg pl-4 pr-12 py-3 text-base focus:outline-none focus:ring-2 focus:ring-imdb-yellow focus:border-transparent shadow-md transition-all duration-200 hover:shadow-lg"
                        >
                        <button 
                            type="submit"
                            aria-label="Search Button"
                            class="absolute right-2 top-1/2 transform -translate-y-1/2 p-2 text-gray-600 hover:text-imdb-yellow hover:bg-gray-100 rounded-full transition-all duration-200"
                        >
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
                            </svg>
                        </button>
                    </div>
                </form>
                <div class="search-error-container mt-2 text-red-400 text-sm font-medium hidden"></div>        
            </div>
        </div>
    </div>
</header>